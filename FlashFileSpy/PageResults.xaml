<Page x:Class="FlashFileSpy.PageResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlashFileSpy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageResults">
    <ScrollViewer>
        <StackPanel>
            <Button Content="Return" Width="75" Margin="10" Click="btnReturn_onClick"/>
            <Image x:Name="ImageGreenCheckmark" Height="100" Width="100" Source="images/transparent-green-checkmark-md.png" Visibility="Collapsed" />
            <Label x:Name="labelNoFlash" FontSize="24" Content="No flash files!" HorizontalAlignment="Center" Visibility="Collapsed" />
            <Image x:Name="ImageRedX" Height="100" Width="100" HorizontalAlignment="Center" Source="images/RedXInCircle.png" Visibility="Hidden" />
            <TextBox x:Name="txtBlock"  VerticalAlignment="Top" Margin="15,0,0,0" Background="Transparent" IsReadOnly="true" AcceptsReturn="True" TextWrapping="Wrap">

            </TextBox>


        </StackPanel>
    </ScrollViewer>
</Page>
